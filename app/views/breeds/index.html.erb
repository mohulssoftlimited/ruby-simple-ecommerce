<h1><%= @breed_group.name %> Breeds</h1>

<div class="mb-4">
  <%= form_with url: breed_group_breeds_path(@breed_group), method: :get, local: true, class: "d-flex" do |form| %>
    <%= form.text_field :search, params[:search], class: "form-control me-2", placeholder: "Search breeds..." %>
    <%= form.submit "Search", class: "btn btn-outline-primary" %>
  <% end %>
</div>

<div class="row">
  <% @breeds.each do |breed| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to breed.name, breed_group_breed_path(@breed_group, breed), class: 'text-decoration-none' %>
          </h5>
          <p class="card-text"><%= breed.temperament %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
