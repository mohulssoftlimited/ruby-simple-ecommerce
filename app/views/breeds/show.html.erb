<h1><%= @breed.name %></h1>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <img src="https://cdn2.thedogapi.com/images/<%= @breed.reference_image_id %>.jpg" alt="<%= @breed.name %>" class="img-fluid rounded">
    </div>
    <div class="col-md-6">
      <h4>Details</h4>
      <ul>
        <li><strong>Weight:</strong> <%= @breed.weight %> lbs</li>
        <li><strong>Height:</strong> <%= @breed.height %> inches</li>
        <li><strong>Life Span:</strong> <%= @breed.life_span %></li>
        <li><strong>Bred For:</strong> <%= @breed.bred_for %></li>
        <li><strong>Temperament:</strong> <%= @breed.temperament %></li>
        <li><strong>Origin:</strong> <%= @breed.origin.presence || "Unknown" %></li>
      </ul>
    </div>
  </div>
</div>
