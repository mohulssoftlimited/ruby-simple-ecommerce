<h1 class="mb-4">Categories</h1>
<div class="mb-4">
  <%= form_with url: categories_path, method: :get, local: true, class: "d-flex" do |form| %>
    <%= form.text_field :search, value: params[:search], class: "form-control me-2", placeholder: "Search categories..." %>
    <%= form.submit "Search", class: "btn btn-outline-primary" %>
  <% end %>
</div>
<div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category), class: 'text-decoration-none' %></h5>
          <p class="card-text"><%= truncate(category.description, length: 50) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
