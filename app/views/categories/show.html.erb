<h1 class="mb-4"><%= @category.name %></h1>
<p><%= @category.description %></p>
<!-- Search form for filtering products within the category -->
<div class="mb-4">
  <%= form_with url: category_path(@category), method: :get, local: true, class: "d-flex" do |form| %>
    <%= form.text_field :search, value: params[:search], class: "form-control me-2", placeholder: "Search products in this category..." %>
    <%= form.submit "Search", class: "btn btn-outline-primary" %>
  <% end %>
</div>
<h2>Products in this Category</h2>
<div class="row">
  <% @products.each do |product| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to product.name, [@category, product], class: 'text-decoration-none' %></h5>
          <p class="card-text"><%= number_to_currency(product.price) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
