
<div class="container product-details mt-5">
  <div class="row">
    <!-- Product Image Section -->
    <div class="col-md-6">
      <div class="product-image">
        <img src="https://placehold.co/500x300?text=<%= @product.name %>&font=roboto" />
      </div>
    </div>

    <!-- Product Information Section -->
    <div class="col-md-6">
      <div class="product-info">
        <h1 class="mb-3"><%= @product.name %></h1>
        <p class="price text-success mb-3"><strong>Price: <%= number_to_currency(@product.price) %></strong></p>

        <div class="product-description mb-3">
          <p><%= @product.description %></p>
        </div>

        <div class="stock-count mb-3">
          <p><strong>Stock Available:</strong> <%= @product.stock_count %></p>
        </div>

        <div class="category mb-3">
          <p><strong>Category:</strong> <%= link_to @product.category.name, category_path(@product.category), class: "text-decoration-none" %></p>
        </div>

        <!-- Add to Cart Section -->
        <div class="add-to-cart">
          
        </div>
      </div>
    </div>
  </div>

  <!-- Product Reviews Section (optional) -->
  <div class="row mt-5">
    <div class="col-md-12">
      <h2>Customer Reviews</h2>
      <!-- Add review display here -->
    </div>
  </div>
</div>
